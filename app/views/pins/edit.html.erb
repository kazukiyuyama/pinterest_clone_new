<div class="col-md-8 col-md-offset-2" id="edit_page">
  <div class="row">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h1>Edit Your Pin</h1>
      </div>
      <div class="panel-body">
        <div class="current_image">

					<% @pin.images.each do |picture| %>
						<div class="preview">
							<%= image_tag picture.preview %>
							<i class="glyphicon glyphicon-remove remove-image" data-image-id="<%= picture.id %>"></i>
						</div>
					<% end %>
        </div>
        <%= render 'form' %>
      </div>
    </div>
  </div>
</div>
